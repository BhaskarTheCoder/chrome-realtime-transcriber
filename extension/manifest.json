{
  "manifest_version": 3,
  "name": "Real-Time Audio Transcriber",
  "version": "1.0",
  "description": "Captures browser tab audio and microphone, transcribes in real-time using Google Gemini.",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "background": { "service_worker": "service_worker.js" },
  "action": {
  "default_title": "Real-Time Transcriber",
  "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_popup": "sidepanel.html"
    },
  "side_panel": { "default_path": "sidepanel.html" },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
}
