{
  "manifest_version": 3,
  "name": "Audio Transcription",
  "description": "Capture tab (and optional mic) audio, chunk every 30s with 3s overlap, and transcribe it in near real-time.",
  "version": "1.1.0",
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "offscreen",
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "https://api.fireworks.ai/*"
  ],
  "icons": {
    "128": "94.png"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_icon": "94.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pcm-worklet.js"],
      "matches": ["<all_urls>"]
    }
  ]
}