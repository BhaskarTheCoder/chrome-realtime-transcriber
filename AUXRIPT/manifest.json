{
  "manifest_version": 3,
  "name": "Real-Time Audio Transcriber",
  "description": "Capture tab and microphone audio, transcribe in real-time using AI. Supports Gemini, OpenAI Whisper, Deepgram, and Fireworks.",
  "version": "2.0.0",
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "offscreen",
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "https://api.fireworks.ai/*"
  ],
  "icons": {
    "16": "16.png",
    "48": "94.png",
    "128": "94.png"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "16.png",
      "48": "94.png",
      "128": "94.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pcm-worklet.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}